
<%= form_for(@restaurant) do |f| %>
	<% if @restaurant.errors.any? %>
		<div class="error_messages">
			<h3>Errors were found:</h3>
				<ul>
					<%= @restaurant.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div>
	<div class="field">
		<%= f.label :capacity %>
		<%= f.text_field :capacity %>
	</div>
	<div class="field">
		<%= f.submit %>
	</div>
<% end %>